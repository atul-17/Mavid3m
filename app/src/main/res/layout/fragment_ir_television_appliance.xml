<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/llRemoteUi"
        android:visibility="gone"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/circular_buttons"
                android:layout_height="@dimen/circular_buttons"
                android:layout_alignParentLeft="true"
                android:background="@drawable/red_circular_button_drawable"
                android:src="@drawable/ic_power_black"
                android:textColor="@color/black"
                android:id="@+id/ibPowerButton"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/circular_buttons"
                android:layout_height="@dimen/circular_buttons"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_circular_white_button"
                android:src="@drawable/ic_dialpad_black"
                android:textColor="@color/black"
                android:id="@+id/ibMoreButton"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/circular_buttons"
                android:layout_height="@dimen/circular_buttons"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_circular_white_button"
                android:src="@drawable/ic_exit_black"
                android:textColor="@color/black"
                android:id="@+id/ibSourceButton"
                android:textSize="15sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:weightSum="5">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:text="Home"
                android:id="@+id/tvHomeButton"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:text="Menu"
                android:id="@+id/tvMenuButton"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:text="Option"
                android:id="@+id/tvOptionButton"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:text="Guide"
                android:id="@+id/tvGuideButton"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:text="Lang"
                android:id="@+id/tvLangButton"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_white_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/ibVolumeMuteButton"
                        android:background="@drawable/ic_volume_mute" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:id="@+id/ibBackButton"
                        android:background="@drawable/ic_replay_black" />

                </RelativeLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_white_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/ibPrevButton"
                        android:background="@drawable/ic_prev_black" />


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:id="@+id/ibNextButton"
                        android:background="@drawable/ic_next_black" />


                </RelativeLayout>


            </FrameLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="160dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/rounded_white_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/tvVolPlusButton"
                        android:background="@drawable/ic_add_black" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:text="VOL"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tvVolMinusButton"
                        android:background="@drawable/ic_minus_black" />

                </RelativeLayout>
            </FrameLayout>


            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="160dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/rounded_white_button"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/tvChUpButton"
                        android:background="@drawable/ic_arrow_up_black" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:text="CH"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/tvChDownButton"
                        android:background="@drawable/ic_arrow_down_black" />

                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_circular_white_button">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/grey_circular_button_drawble"
                        android:fontFamily="@font/quicksand_regular"
                        android:gravity="center"
                        android:text="OK"
                        android:id="@+id/tvOkButton"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ivLeftButton"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_left_black" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ivRightButton"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right_black" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ivUpButton"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_arrow_black_up" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/ivDownButton"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_arrow_down_filled_dowm" />
                </RelativeLayout>
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="25dp"
                android:layout_weight="3"
                android:background="@drawable/blue_rounded_corner_drawble"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:id="@+id/tvBlueButton"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="25dp"
                android:layout_weight="3"
                android:id="@+id/tvGreenButton"
                android:background="@drawable/green_color_rounded_drawable"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="25dp"
                android:layout_weight="3"
                android:id="@+id/tvYellowButton"
                android:background="@drawable/yellow_color_rounded_button_drawable"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_weight="3"
                android:id="@+id/tvRedButton"
                android:background="@drawable/red_color_rounded_button_drawable"
                android:fontFamily="@font/quicksand_regular"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center|right"
            android:gravity="center">


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_rewind_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="right"
                android:layout_gravity="right"
                android:id="@+id/ibRewindButton"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_play_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:id="@+id/ibPlayButton"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_pause_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:id="@+id/ibPauseButton"
                />


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_forward_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:id="@+id/ibFastForwardButton"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">


            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_info_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:id="@+id/ibInfoButton"
                />

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_stop_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:id="@+id/ibStopButton"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_exit_black"
                android:background="@drawable/custom_rouned_corners_white_buttons"
                android:gravity="center"
                android:text="Exit"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:id="@+id/tvExitButtonAlt"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:id="@+id/rlRecButton"
                android:background="@drawable/custom_rouned_corners_white_buttons">

                <FrameLayout
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:gravity="center"
                    android:background="@drawable/black_circular_drawable"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    >
                  <androidx.appcompat.widget.AppCompatTextView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:text="REC"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textSize="8sp"
                      />
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSelectTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="450dp"
        android:layout_centerVertical="true"
        android:visibility="visible">


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:text="Select your TV Manufacturer to control your TV."
            android:textColor="@color/white"
            android:textSize="22sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSelectTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/quicksand_regular"
            android:gravity="center"
            android:text="Select TV"
            android:textColor="@color/brand_orange"
            android:textSize="22sp" />

    </LinearLayout>

    </RelativeLayout>
</ScrollView>